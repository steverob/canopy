<div id="">
  <div class="container">

    <div class="row">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <div class="span6 offset3" id="home">

            <h1 id="sign-up-text">
              <%= t('.sign_up') %>
            </h1>

            <%= form_for(resource, :validate => true, :url => registration_path(resource_name), :html => {:class => "form-horizontal", :autocomplete => "off"}) do |f| %>
                <fieldset>
                  <div class="control-group">
                    <label class="control-label" for="user_email">
                        <%= t('.email') %>
                    </label>

                    <div class="controls">
                        <%= f.email_field :email, :placeholder => "steve.rob@me.com", :title => t('registrations.new.enter_email'), :required => true %>
                    </div>
                  </div>

                  <div class="control-group">
                      <label class="control-label" for="user_username">
                        <%= t('.username') %>
                      </label>

                      <div class="controls">
                        <%= f.text_field :username, :placeholder => "username", :title => t('registrations.new.enter_username'), :required => true, :pattern => "[A-Za-z0-9_]+" %>
                      </div>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="user_password">
                        <%= t('.password') %>
                    </label>

                    <div class="controls">
                        <%= f.password_field :password, :placeholder => "••••••••", :title => t('registrations.new.enter_password'), :required => true, :pattern => "......+" %>
                    </div>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="user_password_confirmation">
                        <%= t('.password_confirmation') %>
                    </label>

                    <div class="controls">
                        <%= f.password_field :password_confirmation, :placeholder => "••••••••", :title => t('registrations.new.enter_password_again'), :required => true, :pattern => "......+" %>
                    </div>
                  </div>
                  <%= invite_hidden_tag(invite) %>
                </fieldset>

                <center><%= f.submit t('.continue'), :class => "new-btn btn" %></center>
            <% end %>
        </div>
    </div>
  </div>
</div>
