production:
  server: 'example.com'
  deploy_to: '/var/www/Evergreen'
  current_dir: 'Evergreen'
  user: 'Evergreen'
  password: 'password'
  rails_env: 'production'
  repo: 'git://github.com/Evergreen/Evergreen.git'
  #set svc_sudo to true if you want to run scv and svstat with sudo. default: false
  svc_sudo: false
staging:
  server: 'staging.example.com'
  deploy_to: '/var/www/Evergreen'
  current_dir: 'Evergreen'
  user: 'Evergreen'
  password: 'password'
  rails_env: 'staging'
  repo: 'git://github.com/Evergreen/Evergreen.git'
  svc_sudo: false
